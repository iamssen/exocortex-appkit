{
  "name": "@iamssen/exocortex-appkit",
  "version": "0.0.1",
  "type": "module",
  "author": "SSen",
  "license": "MIT",
  "exports": {
    "./country-code": {
      "import": "./packages/country-code/index.ts"
    },
    "./dialog": {
      "import": "./packages/dialog/index.ts"
    },
    "./format": {
      "import": "./packages/format/index.ts"
    },
    "./use-element-intersection": {
      "import": "./packages/use-element-intersection/index.ts"
    },
    "./use-local-storage": {
      "import": "./packages/use-local-storage/index.ts"
    }
  },
  "scripts": {
    "test": "vitest run",
    "type-check": "tsc --watch --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,mjs,cjs,ts,tsx,mts,cts}\"",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,mts,cts}": [
      "prettier --write",
      "eslint --max-warnings 0",
      "vitest related"
    ],
    "**/*.{js,jsx,mjs,cjs}": [
      "prettier --write",
      "eslint --max-warnings 0"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "files": [
    "packages"
  ],
  "dependencies": {
    "mathjs": "^15.1.0",
    "numeral": "^2.0.6"
  },
  "peerDependencies": {
    "react": "^19.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/numeral": "^2.0.5",
    "@types/react": "^19.2.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  }
}
